generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vendor {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  contactPerson  String
  email          String          @unique
  phone          String
  paymentTerms   Int             // 7, 15, 30, 45, 60 days
  status         VendorStatus
  deletedAt      DateTime?       // Soft delete
  purchaseOrders PurchaseOrder[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  createdBy      String?         // Audit trail - username who created
  updatedBy      String?         // Audit trail - username who last updated
}

model PurchaseOrder {
  id          Int        @id @default(autoincrement())
  poNumber    String     @unique
  vendorId    Int
  vendor      Vendor     @relation(fields: [vendorId], references: [id])
  poDate      DateTime   @default(now())
  totalAmount Float
  items       LineItem[]
  dueDate     DateTime
  status      POStatus
  payments    Payment[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  createdBy   String?    // Audit trail - username who created
  updatedBy   String?    // Audit trail - username who last updated
}

model LineItem {
  id              Int           @id @default(autoincrement())
  purchaseOrderId Int
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  description     String
  quantity        Int
  unitPrice       Float
}

model Payment {
  id              Int           @id @default(autoincrement())
  reference       String        @unique
  purchaseOrderId Int
  purchaseOrder   PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  amountPaid      Float
  paymentDate     DateTime
  method          PaymentMethod
  notes           String?
  deletedAt       DateTime?     // Soft delete for voided payments
  createdAt       DateTime      @default(now())
  createdBy       String?       // Audit trail - username who created
}

enum VendorStatus {
  ACTIVE
  INACTIVE
}

enum POStatus {
  DRAFT
  APPROVED
  PARTIALLY_PAID
  FULLY_PAID
}

enum PaymentMethod {
  CASH
  CHEQUE
  NEFT
  RTGS
  UPI
}
